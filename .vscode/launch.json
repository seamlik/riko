{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'cargo-riko'",
      "cargo": {
        "args": [
          "build",
          "--bin=cargo-riko",
          "--package=riko"
        ],
        "filter": {
          "name": "cargo-riko",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'cargo-riko'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--bin=cargo-riko",
          "--package=riko"
        ],
        "filter": {
          "name": "cargo-riko",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in library 'riko_core'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--lib",
          "--package=riko_core"
        ],
        "filter": {
          "name": "riko_core",
          "kind": "lib"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in library 'riko_runtime'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--lib",
          "--package=riko_runtime"
        ],
        "filter": {
          "name": "riko_runtime",
          "kind": "lib"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ]
}